<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="@drawable/trivia_bg"
    android:paddingLeft="40dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frameLayout">

        <ScrollView
            android:layout_marginTop="30dp"
            android:layout_marginLeft="170dp"
            android:layout_width="300dp"
            android:layout_height="141dp"
            android:id="@+id/scrollView"
            android:layout_gravity="center|left">

            <ImageView
                android:id="@+id/desc_tokoh_trivia"
                android:src="@drawable/trivia_desc_kenarok"
                android:scaleType="fitXY"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/close_button"
                android:layout_alignEnd="@+id/close_button" />
        </ScrollView>

        <ImageView
            android:id="@+id/image_tokoh_trivia"
            android:src="@drawable/trivia_image_kenarok"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_gravity="left|bottom" />
    </FrameLayout>
    <Button
        android:id="@+id/close_button"
        android:background="@drawable/back_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:layout_width="39dp"
        android:layout_height="37dp" />


</RelativeLayout>